\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{metropolisbonn}[2020-01-21 Metropolis theme with Uni Bonn
colors and some other personal tweaks by Michael Eliachevitch]

% use metropolis theme as base
% see https://github.com/matze/mtheme
\usetheme{metropolis}

% some customizations of metropolis theme
\metroset{numbering=fraction, progressbar=foot, block=fill, titleformat=allcaps}

\RequirePackage[utf8]{inputenc}

\RequirePackage{amsmath, amsfonts, amssymb} % Mathesymbole usw.

% Change font to Calibri clone Carlito, b/c Calibri is offical Bonn font
% This requires compilations with xetex
\RequirePackage{fontspec}
\setsansfont{Carlito}

% for starting backup with \appendix
\RequirePackage{appendixnumberbeamer}

\RequirePackage[english, ngerman]{babel}

% nicer typography
\RequirePackage[babel]{microtype}

% use for units
\RequirePackage{siunitx}

% for table separators
\RequirePackage{booktabs}

% for code blocks
\RequirePackage{listings}

% Define some Bonn colors according to 
\RequirePackage{templates/bonncolors}
\setbeamercolor{frametitle}{fg=white, bg=bonnyellow}
\setbeamercolor{progress bar}{fg=bonnblue, bg=bonnunigrau}
\setbeamercolor{normal text}{fg=bonntextgrau, bg=white}
\setbeamercolor{alerted text}{fg=bonnyellow}

